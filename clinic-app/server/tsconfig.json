{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "./build",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"*": ["*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build"]
}
